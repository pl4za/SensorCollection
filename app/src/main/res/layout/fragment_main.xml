<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main"
    tools:context=".fragments.FragmentEE">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="x: y: z:"
        android:id="@+id/tvSensor"
        android:layout_below="@+id/graph"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:paddingTop="25dp"
        android:text="00:00:00"
        android:id="@+id/tvTime"
        android:layout_below="@+id/tvSensor"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="0 kcal"
        android:id="@+id/tvKcal"
        android:layout_below="@+id/tvTime"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="0 kJ"
        android:id="@+id/tvJoule"
        android:layout_below="@+id/tvKcal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCalibrate"
        android:text="Calibrar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvJoule"/>

    <ToggleButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/play_pause_selector"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Track motion"
        android:id="@+id/tglTrack"
        android:textOff=""
        android:textOn=""
        android:checked="false"
        android:layout_toLeftOf="@+id/btnStop"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/stop"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:id="@+id/btnStop"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
